<div class="logo-container">
  <%= link_to '', root_path %>
  <figure class="logo">
    <%= image_tag("second.png", size: "70x50", alt: 'Logo') %>
  </figure>
</div>

<nav class="navigation">
  <ul class="navbar">
    <li><%= link_to "Blog", root_path %></li>
    <li><%= link_to "Pokedex", pokemon_index_path %></li>
    <li><%= link_to "User list", main_index_path %></li>
  </ul>

  <div class="user-options">
    <% if user_signed_in? %>
      <div class="profile-data">
        <span><strong><%= link_to current_user.name, main_path(current_user.id) %></strong></span>|
        <%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'navbar-link'  %>
      </div>

    <% end %>
  </div>
</nav>